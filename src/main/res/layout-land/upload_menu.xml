<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/cameraUpload"
        android:layout_width="@dimen/upload_menu_sub_button_radius"
        android:layout_height="@dimen/upload_menu_sub_button_radius"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_action_camera"
        android:layout_gravity="center_vertical|right" />

    <ImageButton
        android:id="@+id/galleryUpload"
        android:layout_width="@dimen/upload_menu_sub_button_radius"
        android:layout_height="@dimen/upload_menu_sub_button_radius"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_action_picture"
        android:layout_gravity="center_vertical|right" />

    <ImageButton
        android:id="@+id/linkUpload"
        android:layout_width="@dimen/upload_menu_sub_button_radius"
        android:layout_height="@dimen/upload_menu_sub_button_radius"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_action_link"
        android:layout_gravity="center_vertical|right" />

    <ImageButton
        android:id="@+id/uploadButton"
        android:layout_width="@dimen/upload_menu_button_radius"
        android:layout_height="@dimen/upload_menu_button_radius"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_action_new"
        android:layout_gravity="right" />

</FrameLayout>