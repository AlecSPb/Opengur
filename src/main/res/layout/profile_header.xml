<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <com.kenny.openimgur.ui.TextViewRoboto
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/profile_username_textsize"
            app:robotoFont="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"
            tools:text="DrButtersMD" />

        <com.kenny.openimgur.ui.TextViewRoboto
            android:id="@+id/notoriety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/notoriety_text_size"
            app:robotoFont="bold"
            android:layout_marginBottom="8dp"
            tools:text="@string/notoriety_liked"
            tools:textColor="@android:color/holo_green_light" />

        <com.kenny.openimgur.ui.TextViewRoboto
            android:id="@+id/rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/profile_rep_text_size"
            android:textColor="@android:color/black"
            app:robotoFont="light"
            tools:text="400 Reputation since June 2014" />

        <com.kenny.openimgur.ui.TextViewRoboto
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/profile_bio_text_size"
            android:textColor="@android:color/black"
            app:robotoFont="light"
            tools:text="So this is where the bio will be place
        blah blah blah blah blah blah" />

    </LinearLayout>

</android.support.v7.widget.CardView>