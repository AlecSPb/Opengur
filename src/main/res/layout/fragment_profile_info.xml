<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/flexibleSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/flexible_space"
            tools:background="@color/theme_cyan_primary">

            <com.kenny.openimgur.ui.TextViewRoboto
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_margin"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"
                app:robotoFont="medium"
                tools:text="DRButtersMd" />

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/flexibleSpace"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <com.kenny.openimgur.ui.TextViewRoboto
                    android:id="@+id/notoriety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/notoriety_text_size"
                    app:robotoFont="bold"
                    android:layout_marginBottom="8dp"
                    tools:text="@string/notoriety_liked"
                    tools:textColor="@android:color/holo_green_light" />

                <com.kenny.openimgur.ui.TextViewRoboto
                    android:id="@+id/rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="@dimen/profile_rep_text_size"
                    android:textColor="@android:color/black"
                    app:robotoFont="light"
                    tools:text="400 Reputation since June 2014" />

                <com.kenny.openimgur.ui.TextViewRoboto
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_bio_text_size"
                    android:textColor="@android:color/black"
                    app:robotoFont="light"
                    tools:text="So this is where the bio will be place
        blah blah blah blah blah blah" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.kenny.openimgur.ui.FloatingActionButton
            android:id="@+id/messageBtn"
            android:layout_width="@dimen/fab_button_radius"
            android:layout_height="@dimen/fab_button_radius"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/upload_button_margin_right"
            android:layout_marginBottom="@dimen/upload_button_margin_bottom"
            app:fabColor="@color/theme_cyan_accent" />

    </RelativeLayout>
</ScrollView>