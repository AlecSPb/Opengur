<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/black_circle_button_pressed">

        <shape android:shape="oval">

            <solid android:color="@color/black_circle_button_pressed" />

            <padding android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp" />

        </shape>

    </item>

    <item android:state_focused="true" android:color="@color/black_circle_button_pressed">

        <shape android:shape="oval">

            <solid android:color="@color/black_circle_button_pressed" />

            <padding android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp" />

        </shape>

    </item>

    <item android:color="@color/black_circle_button_default">

        <shape android:shape="oval">

            <solid android:color="@color/black_circle_button_default" />

            <padding android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp" />

        </shape>

    </item>

</selector>