<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/accent_color_blue_700">

        <shape android:shape="rectangle">

            <solid android:color="@color/accent_color_blue_700" />

            <padding android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp" />

        </shape>

    </item>

    <item android:state_focused="true" android:color="@color/accent_color_blue_700">

        <shape android:shape="rectangle">

            <solid android:color="@color/accent_color_blue_700" />

            <padding android:bottom="8dp" android:top="8dp" android:left="8dp" android:right="8dp" />

        </shape>

    </item>

    <item android:state_checked="true" android:color="@color/accent_color_blue_700">

        <shape android:shape="rectangle">

