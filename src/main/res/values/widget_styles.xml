<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Action_Button">
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/action_button_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Radio_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/filter_radio_button</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialog_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">@dimen/dialog_content_margin</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Snack_Bar">
        <item name="android:background">@color/snack_back_bg</item>
        <item name="android:layout_height">@dimen/snack_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/snack_bar_left_right_padding</item>
        <item name="android:paddingRight">@dimen/snack_bar_left_right_padding</item>
        <item name="android:paddingTop">@dimen/snack_bar_top_padding</item>
        <item name="android:paddingBottom">@dimen/snack_bar_bottom_padding</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Snack_Bar_Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/snack_bar_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>