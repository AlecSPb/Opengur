<resources>

    <style name="Style_Translucent" parent="Style_Not_Translucent" />



    <style name="Settings_Style" parent="Imgur_Style_Base">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Style_Not_Translucent" parent="Imgur_Style_Base">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Imgur_Style_Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_blue_500</item>
        <item name="colorPrimaryDark">@color/accent_color_blue_700</item>
        <item name="colorAccent">@color/accent_color_red_200</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionModeBackground">@color/primary_blue_500</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="Style_Translucent_Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary_blue_500</item>
        <item name="colorPrimaryDark">@color/accent_color_blue_700</item>
        <item name="colorAccent">@color/accent_color_red_200</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionModeBackground">@color/primary_blue_500</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

</resources>

