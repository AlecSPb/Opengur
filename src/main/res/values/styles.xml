<resources>

    <style name="Style_Fully_Translucent" parent="Style_Not_Translucent" />

    <style name="Settings_Style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">false</item>
        <item name="colorPrimary">@color/primary_blue_500</item>
        <item name="colorPrimaryDark">@color/accent_color_blue_700</item>
        <item name="colorAccent">@color/accent_color_red_200</item>
    </style>

    <style name="Style_Not_Translucent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="colorPrimary">@color/primary_blue_500</item>
        <item name="colorPrimaryDark">@color/accent_color_blue_700</item>
        <item name="colorAccent">@color/accent_color_red_200</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>

