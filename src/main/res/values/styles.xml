<resources>

    <style name="Style_Fully_Translucent" parent="Style_Not_Translucent"></style>

    <style name="Settings_Style" parent="Style_Not_Translucent">
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="Style_Not_Translucent" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_open_imgur_style</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Open_imgur_style</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Open_imgur_style</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Open_imgur_style</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Open_imgur_style</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Open_imgur_style</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_open_imgur_style</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_open_imgur_style</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Open_imgur_style</item>
        <item name="android:windowBackground">@color/window_bg_color</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Open_imgur_style.Widget</item>

    </style>

    <style name="ActionBar.Solid.Open_imgur_style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_open_imgur_style</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_open_imgur_style</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_open_imgur_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Open_imgur_style</item>
    </style>

    <style name="ActionBar.Transparent.Open_imgur_style" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_open_imgur_style</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Open_imgur_style</item>
    </style>

    <style name="PopupMenu.Open_imgur_style" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_open_imgur_style</item>
    </style>

    <style name="DropDownListView.Open_imgur_style" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_open_imgur_style</item>
    </style>

    <style name="ActionBarTabStyle.Open_imgur_style" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_open_imgur_style</item>
    </style>

    <style name="DropDownNav.Open_imgur_style" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_open_imgur_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_open_imgur_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_open_imgur_style</item>
    </style>

    <style name="ProgressBar.Open_imgur_style" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_open_imgur_style</item>
    </style>

    <style name="ActionButton.CloseMode.Open_imgur_style" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_open_imgur_style</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Open_imgur_style.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Open_imgur_style</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Open_imgur_style</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_round</item>
    </style>

</resources>

