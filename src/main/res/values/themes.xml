<resources>

    <style name="Theme_Translucent" parent="Theme_Not_Translucent" />

    <style name="Settings_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme_Not_Translucent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme_Translucent_Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Override styles (Light) -->
    <style name="Theme_Light">
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_light</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textColorHint">@color/secondary_text_default_material_light</item>
        <item name="android:editTextColor">@color/primary_text_default_material_light</item>
        <item name="android:textColorLink">?colorAccent</item>
        <item name="android:radioButtonStyle">@style/RadioButton.Style.Light</item>
        <item name="android:checkboxStyle">@style/CheckBox.Style.Light</item>
        <item name="cardBG">@color/cardview_light_background</item>
        <item name="emptyDrawableUploads">@drawable/empty_uploads_light</item>
        <item name="emptyDrawableMessages">@drawable/no_comments_light</item>
        <item name="errorDrawable">@drawable/error_light</item>
        <item name="repliesDrawable">@drawable/ic_action_replies_light</item>
        <item name="md_dark_theme">false</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="md_negative_color">@color/primary_text_default_material_light</item>
        <item name="dropDownListViewStyle">@style/PopupMenuStyle.Light</item>
    </style>

    <style name="Theme_Blue" parent="@style/Theme_Light">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_dark</item>
        <item name="colorAccent">@color/theme_blue_accent</item>
        <item name="fabPressed">@color/theme_blue_accent_dark</item>
    </style>

