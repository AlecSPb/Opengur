<resources>

    <style name="Theme_Translucent" parent="Theme_Not_Translucent" />

    <style name="Settings_Theme" parent="Imgur_Theme_Base">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme_Not_Translucent" parent="Imgur_Theme_Base">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Imgur_Theme_Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="Theme_Translucent_Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <!-- Override styles -->
    <style name="Theme_Blue">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_dark</item>
        <item name="colorAccent">@color/theme_blue_accent</item>
    </style>
    <style name="Theme_Orange">
        <item name="colorPrimary">@color/theme_orange_primary</item>
        <item name="colorPrimaryDark">@color/theme_orange_dark</item>
        <item name="colorAccent">@color/theme_light_blue_accent</item>
    </style>
    <style name="Theme_Cyan">
        <item name="colorPrimary">@color/theme_cyan_primary</item>
        <item name="colorPrimaryDark">@color/theme_cyan_dark</item>
        <item name="colorAccent">@color/theme_cyan_accent</item>
    </style>
    <style name="Theme_Green">
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="colorPrimaryDark">@color/theme_green_dark</item>
        <item name="colorAccent">@color/theme_green_accent</item>
    </style>
    <style name="Theme_Teal">
        <item name="colorPrimary">@color/theme_teal_primary</item>
        <item name="colorPrimaryDark">@color/theme_teal_dark</item>
        <item name="colorAccent">@color/theme_teal_accent</item>
    </style>
    <style name="Theme_Red">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryDark">@color/theme_red_dark</item>
        <item name="colorAccent">@color/theme_red_accent</item>
    </style>
    <style name="Theme_Pink">
        <item name="colorPrimary">@color/theme_pink_primary</item>
        <item name="colorPrimaryDark">@color/theme_pink_dark</item>
        <item name="colorAccent">@color/theme_pink_accent</item>
    </style>
    <style name="Theme_Purple">
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorPrimaryDark">@color/theme_purple_dark</item>
        <item name="colorAccent">@color/theme_purple_accent</item>
    </style>
    <style name="Theme_Grey">
        <item name="colorPrimary">@color/theme_grey_primary</item>
        <item name="colorPrimaryDark">@color/theme_grey_dark</item>
        <item name="colorAccent">@color/theme_grey_accent</item>
    </style>

</resources>

