<resources>

    <style name="Style_Fully_Translucent" parent="Style_Not_Translucent">
        <item name="android:windowTranslucentNavigation">@bool/translucent_nav_bar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Style_Not_Translucent" parent="@android:style/Theme.Holo">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:actionBarStyle">@style/ActionBar.Style</item>
        <item name="android:windowBackground">@color/window_bg_color</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_backarrow</item>
    </style>

</resources>

